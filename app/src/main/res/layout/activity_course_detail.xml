<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaelbettis_term_scheduler.Activities.TermActivities.TermDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:padding="16dp">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/course_name"
            android:maxLines="1"
            android:text="Course Name"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/course_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date: "
            android:layout_below="@id/course_name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_toEndOf="@id/course_start"
            android:layout_below="@id/course_name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date: "
            android:layout_below="@id/course_start"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_toEndOf="@id/course_end"
            android:layout_below="@id/course_start"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:layout_below="@id/course_end"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:layout_toEndOf="@id/course_status"
            android:layout_below="@id/course_end"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Mentor: "
            android:layout_below="@id/course_status_indicator"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_mentor_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:layout_toEndOf="@id/course_mentor"
            android:layout_below="@id/course_status_indicator"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mentor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor Phone: "
            android:layout_below="@id/course_mentor"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mentor_phone_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:layout_toEndOf="@id/mentor_phone"
            android:layout_below="@id/course_mentor_indicator"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mentor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor Email: "
            android:layout_below="@id/mentor_phone"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mentor_email_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBD"
            android:layout_toEndOf="@id/mentor_email"
            android:layout_below="@id/mentor_phone_indicator"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/all_notes"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/mentor_email_indicator"
            android:layout_marginTop="8dp"
            android:text="Notes" />

        <Button
            android:id="@+id/all_assessments"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/mentor_email_indicator"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/all_notes"
            android:text="Assessments" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>